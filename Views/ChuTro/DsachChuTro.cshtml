@model IEnumerable<QuanLyTro.Models.TTinChuTro>

@{
    ViewBag.Title = "DsachChuTro";
    Layout = "~/Views/LayoutPage1.cshtml";
}

<h2>Danh Sách Người Cho Thuê</h2>

<button type="button" class="btn btn-outline-warning text-bg-dark" style="margin-bottom: 20px">
    @Html.ActionLink("Thêm Chủ Trọ Mới", "ThemChuTro")
</button>
<table class="table">
    <tr>
        <th>
            TT
        </th>
        <th>
            Họ Và Tên
        </th>
        <th>
            Ngày Sinh
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Nơi Ở
        </th>
        <th>
            Số Lượng Phòng
        </th>
        <th>#</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTenChuTro)
            </td>
            <td>
                @string.Format("{0:dd/MM/yyyy}", item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDKHoKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongPhong)
            </td>
            <td>
                <button class="btn btn-outline-warning text-bg-dark">
                    @Html.ActionLink("Chỉnh Sửa", "UpdTTCTro", new { id = item.HoTenChuTro })
                </button>
                <button class="btn btn-outline-warning text-bg-dark">
                    @Html.ActionLink("Xóa", "XoaTTinCTro", new { id = item.HoTenChuTro })
                </button>
            </td>
        </tr>
    }

</table>
