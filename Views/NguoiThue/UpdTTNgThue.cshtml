@model QuanLyTro.Models.TTinNguoiThue

@{
    ViewBag.Title = "UpdTTNgThue";
    Layout = "~/Views/LayoutPage1.cshtml";
}

<div class="container1" style="margin-top: 50px">
    <div class="col-md-8">
        <h2>
            Sửa Thông Tin Người Thuê
        </h2>
        <hr />
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HoTenNguoiThue)

            <div class="form-group">
                <label>Giới Tính:</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <input type="radio" name="TinhTrang" value="1" />Nam
                        <input type="radio" name="TinhTrang" value="0" />Nữ
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Ngày Sinh:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySinh, "{yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Số Điện Thoại:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Nghề Nghiệp:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgheNghiep, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgheNghiep, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Nơi Đăng Kí Tạm Trú:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoiDKTamTru, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoiDKTamTru, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Mã Phòng:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaPhong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Ngày Vào Ở:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayVaoO, "{yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.NgayVaoO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Ngày Trả Phòng:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayHetHD, "{yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.NgayHetHD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Tiền Đặt Cọc (Nửa tháng đầu tiên):</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TienDatCoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TienDatCoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Mã Hợp Đồng:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Chỉnh sửa" class="btn btn-outline-warning" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>