@model QuanLyTro.Models.TTinNguoiThue

@{
    ViewBag.Title = "DetailNgThue";
    Layout = "~/Views/LayoutPage1.cshtml";
}

<div class="modal-content">
    <div class="modal-header">
        <span class="close">&times;</span>
        <h2 style="position:center;">Thông tin Người thuê</h2>
    </div>
    <div class="modal-content">
            <dl class="dl-horizontal">
                    <dt>
                        <label>Họ và Tên: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HoTenNguoiThue)
                    </dd>

                    <dt>
                        <label>Ngày Sinh: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgaySinh)
                    </dd>

                    <dt>
                        <label>Số Điện Thoại: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SoDienThoai)
                    </dd>

                    <dt>
                        <label>Nghề Nghiệp: </label>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NgheNghiep)
                    </dd>

                    <dt>
                        <label>Nơi Đăng Kí Tạm Trú: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NoiDKTamTru)
                    </dd>

                    <dt>
                        <label>Ngày Vào Ở: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayVaoO)
                    </dd>

                    <dt>
                        <label>Ngày Trả Phòng: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayHetHD)
                    </dd>

                    <dt>
                        <label>Đặt Cọc: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TienDatCoc)
                    </dd>

                    <dt>
                        <label>Mã Hợp Đồng: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaHD)
                    </dd>

                    <dt>
                        <label>Địa Chỉ: </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TTinPhongTro.DiaChi)
                    </dd>
            </dl>
        <p>
            <button class="btn btn-outline-warning text-bg-dark">
                @Html.ActionLink("Chỉnh sửa", "UpdTTNgThue", new { id = Model.TT })
            </button>
            @Html.ActionLink("Quay lại danh sách", "DsachNguoiThue")
        </p>
    </div>
    <div class="modal-footer">
        <h3> Thông tin Người thuê </h3>
    </div>
</div>


